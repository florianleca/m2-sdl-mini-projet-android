<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="300dp"
                                                   android:padding="8dp"
                                                   android:id="@+id/restau_mini"
                                                   android:background="@drawable/ic_mini_comp"
                                                   android:elevation="4dp"
                                                   android:layout_margin="5dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5dp">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="287dp"
                android:layout_weight="1"
                android:contentDescription="@string/restau_img_desc"
                app:srcCompat="@drawable/ic_launcher_foreground"/>

        <LinearLayout
                android:id="@+id/extra"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

            <LinearLayout
                    android:id="@+id/name_stars"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                <TextView
                        android:id="@+id/restau_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textSize="40sp" android:textStyle="bold"
                        android:fontFamily="cursive"/>

                <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end" android:isIndicator="true"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/restau_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:fontFamily="sans-serif" android:textSize="25sp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>